<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @books.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@books.user) do %>
            <%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, book_path(@books) %></td>
          <td><%= @books.body %></td>
          <td><% if @books.favorited_by?(current_user) %>
            <p><%= link_to book_favorites_path(@books), method: :delete do %>
              ♥<%= @books.favorites.count %>
              <% end %>
            </p>
             <% else %>
            <p><%= link_to book_favorites_path(@books), method: :post do %>
              ♡<%= @books.favorites.count %>
               <% end %>
            </p>
          </div>
          <% end %>
        </td>
            <% if @books.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success edit_book_#{@books.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@books), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@books.id}"%></td>
            <% end %>
        </tr>
      </table>
      <div class="comments">
        <p>コメント件数：<%= @books.comments.count %></p>
          <% @books.comments.each do |comment| %>
          <%= comment.user.name %>
          <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
          <% if @books.user == current_user %>
          <div class="comment-delete">
            <td><%= attachment_image_tag(@books.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
            <%= link_to "削除", book_comment_path(comment), method: :delete %>
          </div>
        <% end %>
        <% end %>
      <div class="new-comment">
        <%= form_with(model:[@books, @comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", size: "80x5" %>
        <div>
        <%= f.submit "送信" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>